@model IEnumerable<NearEarthObjectTracker.Models.Meteor_Showers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.showerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateOfVisibility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.moonPhase)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.showerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfVisibility)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moonPhase)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
